<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewLogoFound"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/tvSymbolFound"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <TextView
        android:id="@+id/tvSymbolFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="SMBL"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvCompanyFound"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSymbolFound"
        android:layout_alignBottom="@+id/imageViewLogoFound"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Company name" />
</RelativeLayout>